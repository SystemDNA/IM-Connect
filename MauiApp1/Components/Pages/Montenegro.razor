    {
        isClosingPanel = true;
        StateHasChanged(); // Trigger UI update to apply "slide-out"

        await Task.Delay(300); // Match CSS animation time
        openPanel = null;
        isClosingPanel = false;
        StateHasChanged(); // Refresh after closing
