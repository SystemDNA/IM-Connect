@page "/products"
@using MauiApp1.Components.Models
@using MauiApp1.Services
@inject ProductService ProductService
@inject NavigationManager Navigation

<h3>Product List</h3>

@if (products == null)
{
    <p>Loading...</p>
}
else if (products.Count == 0)
{
    <p>No products found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in products)
            {
                <tr>
                    <td>@p.sName</td>
                    <td>@p.rPrice.ToString("C")</td> <!-- "C" formats as currency -->
                </tr>
            }
        </tbody>
    </table>

}
<button @onclick="BackToLogin" class="btn btn-secondary">Back</button>

@code {
    List<Product> products;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            products = await ProductService.GetProductsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error fetching products: " + ex.Message);
            products = new List<Product>();
        }
    }
    void BackToLogin()
    {
         Navigation.NavigateTo("/login", forceLoad: true); // Force full reload
       // Navigation.NavigateTo("/products"); // Force full reload
    }
}
